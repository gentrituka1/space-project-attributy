// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mission{
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  comments  Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  missionId Int
  mission   Mission  @relation(fields: [missionId], references: [id])
}